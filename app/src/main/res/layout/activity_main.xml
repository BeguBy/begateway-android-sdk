<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_pay_with_public_store_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with PUBLIC_STORE_KEY"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/button_pay_with_checkout_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with CHECKOUT_JSON"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/button_pay_with_credit_card_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay with CREDIT_CARD_JSON"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/input_public_store_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public store key"
        android:labelFor="@+id/input_public_store_key"/>

    <EditText
        android:id="@+id/input_payment_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment token"
        android:labelFor="@+id/input_payment_token"/>

</LinearLayout>